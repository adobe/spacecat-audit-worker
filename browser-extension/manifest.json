{
  "manifest_version": 3,
  "name": "SEO Validator",
  "version": "1.0.0",
  "description": "Check URLs for technical SEO issues and export results as CSV or JSON",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:3033/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

